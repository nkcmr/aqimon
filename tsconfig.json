{
  "compilerOptions": {
    "outDir": "./build",
    "module": "ESNext",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["./src/*.ts", "./src/**/*.ts"],
  "exclude": ["node_modules/", "build/"]
}
